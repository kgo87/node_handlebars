<h1>Eat-Da-Burger</h1>
<img src="/assets/img/burger.png" alt="Paris" class="center">


<div id="burg_display">
  <div id="not_dev">
    <h2>Not devoured</h2>

    <ul id = "dev_list">
      {{#each burgers}}
      {{#unless devoured}}
      <p>
        {{this.id}}. {{this.burger_name}}

        <button data-burgerid="{{this.id}}" class="devour">Devour it!</button>
      </p>
      {{/unless}}
      {{/each}}
    </ul>

  </div>

  <div id="dev">

    <h2>Devoured</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      <p>
        {{this.id}}. {{this.burger_name}}
      </p>
      {{/if}}
      {{/each}}
    </ul>

  </div>

</div>



<h2>Add your burger</h2>
{{!-- <form id = "create-form" action="/api/burgers" method="POST">
  <textarea id = "burg" type="text" name="burger_name"></textarea>
  <button type="button">Submit </button>
</form> --}}
  <textarea id = "burg" type="text" name="burger_name"></textarea>
  <button id = "add" type="button">Submit </button>
<p>Enter a burger you want to eat and click Submit</p>


<script type="text/javascript">
$("#add").on("click", function () {
  console.log($("#burg").val().trim())
  
   $.ajax("/api/burgers/", {
      type: "POST",
      data: {burger_name: $("#burg").val().trim()}
    }).then(
      function() {
        console.log("burger saved");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

$("#dev_list").on("click", "button", function () {
  console.log($(this).attr("data-burgerid"))
  const id = $(this).attr("data-burgerid")
  
  
   $.ajax("/api/burgers/" + id, {
      type: "PUT",
      data: {devoured: true}
    }).then(
      function() {
        console.log("burger devoured");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });


</script>

